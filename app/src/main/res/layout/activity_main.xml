<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/purple">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView31"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/backgroundimg" />

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="350dp"
            android:layout_marginLeft="-20dp"
            android:layout_height="180dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/rectanglem">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/math" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="33dp"
            android:layout_marginLeft="100dp"
            android:text="Mathematics" />

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_below="@id/ll1"
            android:layout_width="320dp"
            android:layout_marginLeft="-20dp"
            android:layout_marginTop="-30dp"
            android:layout_height="180dp"
            android:background="@drawable/rectanglec">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/chemistry" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="310dp"
            android:layout_marginLeft="120dp"
            android:text="Physics"
            android:textColor="@color/white"
            android:textSize="33dp" />

        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="290dp"
            android:layout_height="180dp"
            android:layout_marginLeft="-20dp"
            android:layout_below="@+id/ll2"
            android:layout_marginTop="-30dp"
            android:background="@drawable/rectanglep">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/physics" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="460dp"
            android:layout_marginLeft="70dp"
            android:text="Chemistry"
            android:textColor="@color/white"
            android:textSize="33dp" />

        <LinearLayout
            android:id="@+id/ll4"
            android:layout_width="260dp"
            android:layout_height="180dp"
            android:layout_marginLeft="-20dp"
            android:layout_marginTop="-30dp"
            android:layout_below="@+id/ll3"
            android:background="@drawable/rectangler">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/resoning" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="610dp"
            android:text="Reasoning"
            android:layout_marginLeft="40dp"
            android:textColor="@color/white"
            android:textSize="33dp" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="750dp"
            android:layout_marginBottom="50dp"
            app:srcCompat="@drawable/bar" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/user_1" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hi mohit"
            android:textColor="@color/white"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="40dp" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="80dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="20dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/notification" />

    </RelativeLayout>

</ScrollView>
